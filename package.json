{
    "name": "corkboard",
    "productName": "Corkboard",
    "version": "1.5.0",
    "description": "Sticky Notes & Pictures",
    "main": "./dist/electron/main.js",
    "scripts": {
        "build": "node ./build/build.js",
        "build:dev": "cross-env NODE_ENV=development node ./build/build.js",
        "start": "electron dist/electron/main.js",
        "start:dev": "cross-env NODE_ENV=development electron dist/electron/main.js",
        "pack": "cross-env NODE_ENV=production electron-builder --dir",
        "dist": "cross-env NODE_ENV=production electron-builder",
        "lint": "cross-env eslint ./ --ext .vue",
        "lint-fix": "cross-env eslint ./ --fix --ext .vue",
        "postinstall": "cross-env electron-builder install-app-deps"
    },
    "author": "R. J. Young",
    "license": "MIT",
    "dependencies": {
        "@fortawesome/fontawesome": "^1.1.5",
        "@fortawesome/fontawesome-free-regular": "^5.0.9",
        "@fortawesome/fontawesome-free-solid": "^5.0.9",
        "@fortawesome/vue-fontawesome": "0.0.22",
        "mkdirp": "^0.5.1",
        "sqlite3": "^4.0.0",
        "touch": "^3.1.0",
        "vue": "^2.5.16",
        "vuex": "^3.0.1"
    },
    "devDependencies": {
        "babel-loader": "^7.1.4",
        "cross-env": "^5.1.4",
        "css-loader": "^0.28.11",
        "del": "^3.0.0",
        "electron": "^1.8.4",
        "electron-builder": "^20.8.1",
        "eslint": "^4.19.1",
        "eslint-plugin-html": "^4.0.2",
        "eslint-plugin-vue": "^4.4.0",
        "file-loader": "^1.1.11",
        "html-webpack-plugin": "^3.2.0",
        "multispinner": "^0.2.1",
        "node-loader": "^0.6.0",
        "vue-devtools": "^3.1.9",
        "vue-loader": "^14.2.2",
        "vue-template-compiler": "^2.5.16",
        "webpack": "^4.4.1",
        "webpack-cli": "^2.0.13"
    },
    "build": {
        "appId": "com.richjyoung.corkboard",
        "directories": {
            "output": "out"
        },
        "files": ["dist/electron/**"],
        "win": {
            "target": [{
                    "target": "nsis"
                },
                {
                    "target": "portable"
                }
            ]
        }
    }
}